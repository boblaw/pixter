<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout
android:id="@+id/widget0"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
   <ViewFlipper
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scaleType="fitCenter"
    android:id="@+id/flip"
    >
    <ImageView
   android:id="@+id/ImageView01"
   android:scaleType="fitCenter"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:visibility="visible"/>
  
</ViewFlipper>   
    
      <Button 
    android:onClick="ClickHandler" 
    android:layout_height="wrap_content" 
    android:id="@+id/Button01" 
    android:layout_x="280px"
	android:layout_y="400px"
    android:layout_width="wrap_content" 
    android:background="@drawable/downloadnew">
    </Button>
      
    <Button 
    android:layout_width="wrap_content" 
    android:id="@+id/prev_pic" 
    android:layout_x="20px"
	android:layout_y="130px"
    android:layout_height="wrap_content"
    android:onClick="previous_handler"
    android:background="@drawable/leftnew"
    >
    </Button>
    
    <Button 
    android:id="@+id/next_pic" 
    android:layout_x="540px"
	android:layout_y="130px"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:onClick="nextpic_handler"
    android:background="@drawable/rightnew"
    >
    </Button>
    <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/textView1" android:layout_toRightOf="@+id/next_pic" android:layout_width="wrap_content"></TextView>
</AbsoluteLayout>
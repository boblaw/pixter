<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:gravity="fill">

    <Button android:onClick="ClickHandler" android:layout_height="wrap_content" android:id="@+id/Button01" android:text="Download" android:layout_width="wrap_content"></Button>
    <Button android:onClick="ClickHandler1" android:layout_height="wrap_content" android:id="@+id/Button02" android:text="Next" android:layout_width="wrap_content"></Button>
    <Button android:onClick="ClickHandler2" android:layout_height="wrap_content" android:id="@+id/Button03" android:text="Back" android:layout_width="wrap_content"></Button>
    
    <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/textView1" android:layout_width="wrap_content"></TextView>
  <ViewFlipper
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:id="@+id/flip"
    android:gravity="fill"
    >
    <ImageView
   android:id="@+id/ImageView01"
   android:scaleType="center"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:visibility="visible" android:layout_gravity="fill"/>
  
</ViewFlipper>
</LinearLayout>
